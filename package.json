{
  "name": "campaign-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:clean": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && npm run dev",
    "build": "npm run i18n:validate && npm run i18n:types && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "i18n:validate": "tsx scripts/validate-translations.ts",
    "i18n:types": "tsx scripts/generate-translation-types.ts",
    "i18n:translate": "tsx scripts/ai-translator.ts",
    "i18n:check": "npm run i18n:validate && npm run i18n:types",
    "i18n:secure-setup": "tsx scripts/secure-api-manager.ts set-key",
    "i18n:test-connection": "tsx scripts/secure-api-manager.ts test",
    "i18n:usage-stats": "tsx scripts/secure-api-manager.ts stats",
    "i18n:audit-log": "tsx scripts/secure-api-manager.ts audit",
    "prebuild": "npm run i18n:check"
  },
  "dependencies": {
    "@auth/supabase-adapter": "^1.9.1",
    "@hookform/resolvers": "^3.10.0",
    "@lexical/react": "^0.19.0",
    "@lexical/rich-text": "^0.19.0",
    "@lexical/selection": "^0.19.0",
    "@lexical/utils": "^0.19.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.0",
    "@types/nodemailer": "^6.4.17",
    "lexical": "^0.19.0",
    "next": "15.3.3",
    "next-auth": "^5.0.0-beta.28",
    "next-intl": "^4.1.0",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.2.3",
    "react-easy-crop": "^5.4.2",
    "react-hook-form": "^7.53.2",
    "resend": "^4.6.0",
    "sharp": "^0.34.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@formatjs/ts-transformer": "^3.13.14",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^15.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-formatjs": "^4.13.0",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
